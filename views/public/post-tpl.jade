article.panel.panel-default
    div.panel-heading
        div.row
            div.col-lg-11.col-md-11.col-sm-11.panel-title
                h2= post.title
            div.col-lg-1.col-md-1.col-sm-1
                span.pull-right.label.label-default= post.formatDate(preferredLocale)
    div.panel-body
        div.post-content(data-post-content-id=post._id.toString())!= post.contentCut
    div.panel-footer
        div.row
            div.col-lg-12.col-md-12.col-sm-12
                if post.hasCut
                    a.pull-right(href="javascript:void 0", data-cmd-show-full=post._id.toString()) #{getText('SHOW_MORE')}


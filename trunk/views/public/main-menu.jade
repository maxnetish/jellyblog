// div(ng-controller='mainMenuController')
header
    div.row
        div.col-lg-12.col-md-12.col-sm-12
            div.main-image(style="background-image: url("+settings.titleImageUrl+")")
    div.row.site-title
        div.col-lg-12.col-md-12.col-sm-12
            a(href=rootUrl, data-route)
                h1= settings.siteTitle
    div.row
        div.col-lg-12.col-md-12.col-sm-12
            nav
                ul.list-unstyled.list-inline
                    each linkItem in navlinksMain
                        li
                            a.btn.btn-link(href=linkItem.url, class=linkItem.disabled?'disabled':'', target=linkItem.newWindow?'_blank':'')
                                span.glyphicon(class=linkItem.icon)
                                b!= linkItem.text
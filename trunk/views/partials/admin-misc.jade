div.container-fluid
    div.row
        div.col-sm-12
            div.form-group
                div.col-sm-4
                    input.form-control(type='file', name='file', id='file', accept='image/*')
                button.btn.btn-info(ng-click='upload()') Upload
    div.row
        div.col-sm-12
            a(ng-click='showMainMenuEditor=!showMainMenuEditor', href='javascript:void(0)')
                h3 {{'MAIN_MENU' | translate}}
    div(ng-show='showMainMenuEditor')
        div.row(jelly-menu-add-save, save='saveNavlinks', add='addNavlink', category='"main"', save-disabled='mainNavlinksForm.$invalid || mainNavlinksForm.$pristine')
        form.form(role='form', name='mainNavlinksForm', jelly-menu-editor, navlinks='mainNavlinks')
        div.row(ng-show='mainNavlinks.length>2', jelly-menu-add-save, save='saveNavlinks', add='addNavlink', category='"main"', save-disabled='mainNavlinksForm.$invalid || mainNavlinksForm.$pristine')
        div.row(ng-show='!!mainNavlinks.length')
            div.col-sm-12
                h4 {{'PREVIEW' | translate}}
        div.row
            div.col-sm-12
                nav
                    ul.list-unstyled.list-inline
                        li(ng-repeat='navlink in mainNavlinks | filter: {willRemove: false, visible: true}')
                            a.btn(ng-href='{{navlink.url}}', ng-class='{"disabled": navlink.disabled}', target='{{navlink.newWindow? "_blank":""}}')
                                span.glyphicon(class='{{navlink.icon}}')
                                b &nbsp;{{navlink.text}}
    div.row
        div.col-sm-12
            a(ng-click='showFooterMenuEditor=!showFooterMenuEditor', href='javascript:void(0)')
                h3 {{'FOOTER_MENU' | translate}}
    div(ng-show='showFooterMenuEditor')
        div.row(jelly-menu-add-save, save='saveNavlinks', add='addNavlink', category='"footer"', save-disabled='footerNavlinksForm.$invalid || footerNavlinksForm.$pristine')
        form.form(role='form', name='footerNavlinksForm', jelly-menu-editor, navlinks='footerNavlinks')
        div.row(ng-show='footerNavlinks.length>2', jelly-menu-add-save, save='saveNavlinks', add='addNavlink', category='"footer"', save-disabled='footerNavlinksForm.$invalid || footerNavlinksForm.$pristine')
        div.row(ng-show='!!footerNavlinks.length')
            div.col-sm-12
                h4 {{'PREVIEW' | translate}}
        div.row
            div.col-sm-12
                nav
                    ul.list-unstyled
                        li(ng-repeat='navlink in footerNavlinks | filter: {willRemove: false, visible: true}')
                            a(ng-href='{{navlink.url}}', ng-class='{"disabled": navlink.disabled}', target='{{navlink.newWindow? "_blank":""}}')
                                span.glyphicon(class='{{navlink.icon}}')
                                b &nbsp;{{navlink.text}}
